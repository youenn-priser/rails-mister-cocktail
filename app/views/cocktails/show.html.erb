<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="d-flex flex-column">
    <div class="justify-content-center p-2">
      <img class="rounded img-fluid" src="https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80"/>
    </div>
    <div class="justify-content-center p-2">
      <h3 class="text-center">Recipe</h3>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item"><%= dose.description %> of <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
