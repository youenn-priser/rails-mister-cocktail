<h1 class="text-center">All cocktails</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-12 w-50">
      <%= form_tag root_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a cocktail"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-3 my-3">
        <div class="card-cocktail">
          <%= cocktail.photo.attached? ? (cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill) : (image_tag 'default-cocktail.png') %>
          <div class="card-cocktail-infos">
            <div>
              <h2><%= cocktail.name %></h2>
              <%= link_to 'See more', cocktail_path(cocktail), class: 'stretched-link' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


